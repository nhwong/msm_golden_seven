<table>

  <% @directors.each do |director| %>
  <tr>
    <td><%= director.name %></td>
    <td><%= director.bio %></td>
    <td><%= director.dob %></td>
    <td><img src="<%= director.image_url %>" width="80"></td>
    <td><a href="/directors/<%= director.id %>">Info</a></td>
    <td><a href="/edit_director/<%= director.id %>">Edit</a></td>
    <td><a href="/delete_director/<%= director.id %>">Delete</a></td>
  </tr>
  <% end %>

</table>
