<a href="/new_movie_form">Add New Movie</a>

<table>

  <% @movies.each do |movie| %>
  <tr>
    <td><%= movie.title %></td>
    <td><%= movie.year %></td>
    <td><%= movie.duration %></td>
    <td><%= movie.description %></td>
    <td><img src="<%= movie.image_url %>" width="80"></td>
    <td><a href="/movies/<%= movie.id %>">Info</a></td>
    <td><a href="/edit_movie_form/<%= movie.id %>">Edit</a></td>
    <td><a href="/delete_movie/<%= movie.id %>">Delete</a></td>
  </tr>
  <% end %>

</table>
